<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <title><%= user.firstName %></title>
  </head>
  <%- include('../partials/header') %>
  <body>
    <h1><%= user.firstName %> <%= user.lastName %></h1>
    <ul>
      <li><%= user.username %></li>
      <li><%= user.email %></li>
      <li><%= user.phoneNumber %></li>
    </ul>

    <a href="/buddy/<%= user._id %>/edit" class="btn btn-sm btn-primary">Edit Profile</a>

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Workout</th>
          <th scope="col">Date</th>
          <th scope="col">Time</th>
          <th scope="col">Connect</th>
        </tr>
      </thead>
      <tbody>
        <% user.upcomingEvents.forEach(event=> { %>

         
        <tr>
          <td scope="row"><%= event.workout %> </th>
          <td><%= event.date %> </td>
          <td><%= event.time %> </td>
          <td> <a href="/events/<%= event._id  %> " class="btn btn-sm btn-secondary">Buddy Chat</a></td>
          <td> <a href="/buddy/<%= event._id %>/remove" class="btn btn-sm btn-primary">Delete Event</a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
 
  </body>
</html>
