<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <title>Workout Event</title>
  </head>

  <body>
    <%- include('../partials/header') %>
    <div class="card" style="width: 18rem">
      <img
        src="/stylesheets/images/bopo1.png"
        class="card-img-top"
        alt="..."
      />
      <div class="card-body text-center">
        <h5 class="card-title"><%= event.workout.toUpperCase() %></h5>
        <p class="card-text"><%= event.description %></p>
      </div>
      <ul class="list-group list-group-flush text-center">
        <li class="list-group-item"><%= event.location.toUpperCase() %></li>
        <li class="list-group-item"><%= event.address %></li>
        <li class="list-group-item"><%= event.date %></li>
        <li class="list-group-item"><%= event.time %></li>
      </ul>
      <div class="card-body text-center">
        <form
          action="/buddy/events/<%= user.username %>?_method=PUT"
          method="POST"
        >
          <button type="submit" class="card-link">Buddy up!</button>
          <input type="hidden" name="eventId" value="<%= event._id %>" />
        </form>
      </div>
      <div class="card-body text-center"></div>
    </div>

    <br />
    <br />

    <h3>Leave a comment here:</h3>
    <form id="add-review-form" method="POST" action="/events/<%= event._id %>">
      <label></label>
      <textarea name="content"></textarea>
      <!-- need to be able to access username for value -->
      <input type="hidden" name="username" value="Anna" />
      <input type="submit" value="Post" />
    </form>
    <% if (event.comments.length> 0) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Username</th>
          <th>Comment</th>
        </tr>
      </thead>
      <tbody>
        <% event.comments.forEach(function(c) { %>
        <tr>
          <td><%= c.username %></td>
          <td><%= c.content %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } else { %> <% } %>
  </body>
</html>

