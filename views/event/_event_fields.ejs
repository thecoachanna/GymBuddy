<div class="form-group">
    <label for="username">Username</label>
    <input required type="text" name="username" placeholder="Username" id="username" class="form-control">
</div>
<div class="form-group">
    <label for="workout">Workout</label>
    <input required type="text" name="workout" placeholder="Activity" id="workout" class="form-control">
</div>
<div class="form-group">
    <label for="location">Location</label>
    <input required type="text" name="location" placeholder="Business" id="location" class="form-control">
</div>
<div class="form-group">
    <label for="address">Address</label>
    <input required type="text" name="address" placeholder="Include City, State, Zip" id="address" class="form-control">
</div>
<div class="form-group">
    <label for="date">Date</label>
    <input required type="text" name="date" placeholder="MM/DD/YY" id="date" class="form-control">
</div>
<div class="form-group">
    <label for="time">Time</label>
    <input required type="text" name="time" placeholder="EST" id="time" class="form-control">
</div>
<div class="form-group mb-3">
    <label for="description">Description</label>
    <textarea name="description" id="description" placeholder="Any important info about workout. Experience level. Parking. Cost. Max persons." class="form-control"></textarea>
</div>
<button type="submit" class="btn btn-secondary">Save</button>
<a href="/events" class="btn btn-primary">Cancel</a>
